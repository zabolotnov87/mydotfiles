[color]
  ui = true
[color "branch"]
  current = yellow reverse
  branch = auto
  interactive = auto
  status = auto
  ui = auto
  pager = true
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
  a = add
  b = branch -v
  up = pull --rebase
  put = push origin HEAD
  c = commit
  co = checkout
  d = diff
  ds = diff --staged
  ls = log  --decorate --date=short
  last = log -1 HEAD
  rc = rebase --continue
  rs = rebase --skip
  unstage = reset HEAD
  undo = reset --soft HEAD^
  s = status -s
  g = grep --break --heading --line-number
[format]
  pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset
[branch]
  autosetupmerge = true
[push]
  # 'git push' will push the current branch to its tracking branch
  # the usual default is to push all branches
  default = tracking
[core]
  autocrlf = false
  editor = nvim
  excludesfile = ~/.gitignore
[advice]
  statusHints = false
[diff]
  # Git diff will use (i)ndex, (w)ork tree, (c)ommit and (o)bject
  # instead of a/b/c/d as prefixes for patches
  mnemonicprefix = true
[rerere]
  # Remember my merges
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
  enabled = true
[include]
  path = .gitconfig.user
[grep]
  extendRegexp = true
  lineNumber = true
[user]
  email = sergey.zabolotnov@gmail.com
  name = Sergey Zabolotnov
