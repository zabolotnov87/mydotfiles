snippet re "require ..."
require '${1:ruby_file}'
endsnippet

snippet cl "class SomeClass ..."
class ${1:SomeClass}
	${3:<body>}
end
endsnippet

snippet mod "module SomeModule ..."
module ${1:SomeModule}
	${2:<body>}
end
endsnippet

snippet d "def some_method(*args)"
def ${1:method}${2:(*args)}
	${3:<body>}
end
endsnippet

snippet pry "require 'pry'; binding.pry"
require 'pry'; binding.pry
endsnippet
